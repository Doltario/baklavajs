{
    "name": "baklavajs",
    "private": true,
    "scripts": {
        "playground": "cd packages/baklavajs-plugin-renderer-vue && yarn run dev",
        "lint": "eslint packages --ext .js,.ts",
        "build": "lerna run build --stream --ignore \"baklavajs-playground\" --ignore \"baklavajs\"",
        "test": "lerna run test",
        "clean": "rimraf ./packages/*/dist && rimraf ./packages/baklavajs-full/lib",
        "docs": "lerna run docs"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@typescript-eslint/eslint-plugin": "^4.15.0",
        "@typescript-eslint/parser": "^4.15.0",
        "chai": "^4.3.0",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-vue": "^7.5.0",
        "lerna": "^3.22.1",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "typedoc": "^0.20.24",
        "typescript": "^4.1.5",
        "webpack-bundle-analyzer": "^4.4.0"
    }
}
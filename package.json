{
    "name": "baklavajs",
    "private": true,
    "scripts": {
        "playground": "cd packages/baklavajs-plugin-renderer-vue && yarn run dev",
        "lint": "eslint packages --ext .js,.ts",
        "build": "lerna run build --stream --ignore \"baklavajs-playground\" --ignore \"baklavajs\"",
        "test": "lerna run test",
        "clean": "rimraf ./packages/*/dist && rimraf ./packages/baklavajs-full/lib",
        "generate-api-docs": "typedoc"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/chai": "^4.2.19",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "chai": "^4.3.4",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-vue": "^7.11.1",
        "lerna": "^4.0.0",
        "prettier": "^2.3.1",
        "prettier-eslint": "^12.0.0",
        "rimraf": "^3.0.2",
        "typedoc": "^0.21.0",
        "typescript": "^4.3.4",
        "vue-eslint-parser": "^7.6.0"
    }
}
